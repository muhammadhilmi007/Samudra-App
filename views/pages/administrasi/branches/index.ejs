  <a href="<%= base %>admin/branches/create" class="btn btn-primary">
    <i class="bx bx-plus"></i> Create New Branch
  </a>
  <% } %>
</div>

<!-- Success/Error Messages -->
<% if (locals.successMessage) { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= successMessage %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if (locals.errorMessage) { %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <%= errorMessage %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<!-- Branches Table -->
<div class="card">
  <div class="card-header">
    <h5 class="card-title mb-0">All Branches</h5>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Code</th>
            <th>Type</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (branches && branches.length > 0) { %>
          <% branches.forEach(branch => { %>
          <tr>
            <td>
              <strong><%= branch.name %></strong>
            </td>
            <td><code><%= branch.code %></code></td>
            <td>
              <% if (branch.type === 'pusat') { %>
              <span class="badge bg-primary">Pusat</span>
              <% } else { %>
              <span class="badge bg-info">Cabang</span>
              <% } %>
            </td>
            <td><%= branch.address || '-' %></td>
            <td><%= branch.phone || '-' %></td>
            <td>
              <% if (branch.isActive) { %>
              <span class="badge bg-success">Active</span>
              <% } else { %>
              <span class="badge bg-danger">Inactive</span>
              <% } %>
            </td>
            <td>
              <div class="btn-group btn-group-sm" role="group">
                <% if (userPermissions && userPermissions.branches && userPermissions.branches.includes('update')) { %>
                <a href="<%= base %>admin/branches/<%= branch._id %>/edit" class="btn btn-warning" title="Edit">
                  <i class="bx bx-edit"></i>
                </a>
                <% } %>
                <% if (userPermissions && userPermissions.branches && userPermissions.branches.includes('delete')) { %>
                <button type="button" class="btn btn-danger" onclick="confirmDelete('<%= branch._id %>')" title="Delete">
                  <i class="bx bx-trash"></i>
                </button>
                <% } %>
              </div>
            </td>
          </tr>
          <% }) %>
          <% } else { %>
          <tr>
            <td colspan="7" class="text-center">No branches found</td>
          </tr>
          <% } %>
          </td>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Delete Form (Hidden) -->
<form id="deleteForm" method="POST" style="display: none;">
  <input type="hidden" name="_method" value="DELETE">
</form>

<script>
  function confirmDelete(branchId) {
    if (confirm('Are you sure you want to delete this branch? This action cannot be undone.')) {
      const form = document.getElementById('deleteForm');
      form.action = '<%= base %>admin/branches/' + branchId;
      form.submit();
    }
  }
</script>