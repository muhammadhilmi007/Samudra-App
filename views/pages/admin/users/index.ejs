<!-- Breadcrumb -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a href="<%= base %>dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="#">Admin</a></li>
        <li class="breadcrumb-item active" aria-current="page">Users</li>
      </ol>
    </nav>
    <h1 class="h3 mb-0">User Management</h1>
  </div>
  <% if (userPermissions && userPermissions.users && userPermissions.users.includes('create')) { %>
  <a href="<%= base %>admin/users/create" class="btn btn-primary">
    <i class="bx bx-plus"></i> Create New User
  </a>
  <% } %>
</div>

<!-- Success/Error Messages -->
<% if (locals.successMessage) { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= successMessage %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if (locals.errorMessage) { %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <%= errorMessage %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<!-- Users Table -->
<div class="card">
  <div class="card-header">
    <h5 class="card-title mb-0">All Users</h5>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Branch</th>
            <th>Division</th>
            <th>Position</th>
            <th>Role</th>
            <th>Status</th>
            <th>Last Login</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (users && users.length > 0) { %>
            <% users.forEach(user => { %>
            <tr>
              <td>
                <strong><%= user.name %></strong>
                <% if (user.email === session.user.email) { %>
                <span class="badge bg-info ms-1">You</span>
                <% } %>
              </td>
              <td><%= user.email %></td>
              <td><%= user.branch_id ? user.branch_id.name : '-' %></td>
              <td><%= user.division_id ? user.division_id.name : '-' %></td>
              <td><%= user.position_id ? user.position_id.name : '-' %></td>
              <td>
                <% if (user.role_id) { %>
                <span class="badge bg-secondary"><%= user.role_id.name %></span>
                <% } else { %>
                <span class="text-muted">No role</span>
                <% } %>
              </td>
              <td>
                <% if (user.isActive) { %>
                <span class="badge bg-success">Active</span>
                <% } else { %>
                <span class="badge bg-danger">Inactive</span>
                <% } %>
              </td>
              <td>
                <% if (user.lastLogin) { %>
                  <%= new Date(user.lastLogin).toLocaleDateString() %>
                  <br>
                  <small class="text-muted"><%= new Date(user.lastLogin).toLocaleTimeString() %></small>
                <% } else { %>
                  <span class="text-muted">Never</span>
                <% } %>
              </td>
              <td>
                <div class="btn-group btn-group-sm" role="group">
                  <% if (userPermissions && userPermissions.users && userPermissions.users.includes('update')) { %>
                  <a href="<%= base %>admin/users/<%= user._id %>/edit" class="btn btn-warning" title="Edit">
                    <i class="bx bx-edit"></i>
                  </a>
                  <% } %>
                  <% if (userPermissions && userPermissions.users && userPermissions.users.includes('delete') && user.email !== session.user.email) { %>
                  <button type="button" class="btn btn-danger" onclick="confirmDelete('<%= user._id %>')" title="Delete">
                    <i class="bx bx-trash"></i>
                  </button>
                  <% } %>
                </div>
              </td>
            </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="9" class="text-center">No users found</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Delete Form (Hidden) -->
<form id="deleteForm" method="POST" style="display: none;">
  <input type="hidden" name="_method" value="DELETE">
</form>

<script>
function confirmDelete(userId) {
  if (confirm('Are you sure you want to delete this user? This action cannot be undone.')) {
    const form = document.getElementById('deleteForm');
    form.action = '<%= base %>admin/users/' + userId;
    form.submit();
  }
}
</script>