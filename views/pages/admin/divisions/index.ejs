<div class="container-fluid mt-30">
  <div class="social-dash-wrap">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-body">
            <p class="color-dark fw-500 fs-20 mb-0">Division Page</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Breadcrumb -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item">
          <a href="<%= base %>dashboard">Dashboard</a>
        </li>
        <li class="breadcrumb-item"><a href="#">Admin</a></li>
        <li class="breadcrumb-item active" aria-current="page">Divisions</li>
      </ol>
    </nav>
    <h1 class="h3 mb-0">Division Management</h1>
  </div>
  <% if (userPermissions && userPermissions.divisions &&
  userPermissions.divisions.includes('create')) { %>
  <a href="<%= base %>admin/divisions/create" class="btn btn-primary">
    <i class="bx bx-plus"></i> Create New Division
  </a>
  <% } %>
</div>

<!-- Success/Error Messages -->
<% if (locals.successMessage) { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= successMessage %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if (locals.errorMessage) { %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <%= errorMessage %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>

<!-- Divisions Table -->
<div class="card">
  <div class="card-header">
    <h5 class="card-title mb-0">All Divisions</h5>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Code</th>
            <th>Description</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (divisions && divisions.length > 0) { %> <%
          divisions.forEach(division => { %>
          <tr>
            <td><strong><%= division.name %></strong></td>
            <td><code><%= division.code %></code></td>
            <td><%= division.description || '-' %></td>
            <td>
              <% if (division.isActive) { %>
              <span class="badge bg-success">Active</span>
              <% } else { %>
              <span class="badge bg-danger">Inactive</span>
              <% } %>
            </td>
            <td>
              <div class="btn-group btn-group-sm" role="group">
                <% if (userPermissions && userPermissions.divisions &&
                userPermissions.divisions.includes('update')) { %>
                <a
                  href="<%= base %>admin/divisions/<%= division._id %>/edit"
                  class="btn btn-warning"
                  title="Edit"
                >
                  <i class="bx bx-edit"></i>
                </a>
                <% } %> <% if (userPermissions && userPermissions.divisions &&
                userPermissions.divisions.includes('delete')) { %>
                <button
                  type="button"
                  class="btn btn-danger"
                  onclick="confirmDelete('<%= division._id %>')"
                  title="Delete"
                >
                  <i class="bx bx-trash"></i>
                </button>
                <% } %>
              </div>
            </td>
          </tr>
          <% }) %> <% } else { %>
          <tr>
            <td colspan="5" class="text-center">No divisions found</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Delete Form (Hidden) -->
<form id="deleteForm" method="POST" style="display: none">
  <input type="hidden" name="_method" value="DELETE" />
</form>

<script>
  function confirmDelete(divisionId) {
    if (
      confirm(
        "Are you sure you want to delete this division? This action cannot be undone."
      )
    ) {
      const form = document.getElementById("deleteForm");
      form.action = "<%= base %>admin/divisions/" + divisionId;
      form.submit();
    }
  }
</script>
